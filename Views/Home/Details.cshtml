@model User


<div class="card w-25 mx-auto mt-5 shadow">
    <div class="card-body">
        <div class="card-title fs-5 text-decoration-underline">Submitted Info</div>
        <div class="row">
            <p class="col">Name:</p>
            <p class="col">@Model.Name</p>
        </div>
        <div class="row">
            <p class="col">Location:</p>
            <p class="col">@Model.Location</p>
        </div>
        <div class="row">
            <p class="col">Language:</p>
            <p class="col">@Model.Language</p>
        </div>
        <div class="row">
            <p class="col">Comment:</p>
            @{
                if (Model.Comment == null)
                {
                    <p class="col">No Comment</p>
                }
                else
                {
                    <p class="col">@Model.Comment</p>
                }
            }
        </div>
        <div class="d-flex justify-content-end">
            <a class="btn btn-primary" href="/">Home</a>
        </div>

    </div>
</div>


