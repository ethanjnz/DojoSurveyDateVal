@{
    ViewData["Title"] = "Home Page";
}

@*
label = col-form-label
input/textarea = form-control
select = form-select
*@
@model User
<div class="card w-25 mx-auto mt-5 shadow-lg">
    <div class="card-body">
        <form asp-action="Process" asp-controller="Home" method="post">
            <div class="mb-3 row">
                <label asp-for="Name" class="col-form-label col-sm-6">Your Name:</label>
                <div class="col-sm-6">
                    <input required asp-for="Name" class="form-control">
                    <span class="text-warning" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-form-label col-sm-6" asp-for="Location"> Your Location:</label>
                <div class=" col-sm-6">
                    <select required asp-for="Location" class="form-select" aria-label="Default select example">
                        <option value="" disabled selected hidden>---Select Location---</option>
                        <option value="SanJose">San Jose</option>
                        <option value="Colorodo">Colorodo</option>
                        <option value="NewYork">New York</option>
                    </select>
                    <span class="text-warning" asp-validation-for="Location"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-form-label col-sm-6" asp-for="Language"> Favorite Language:</label>
                <div class="col-sm-6">
                    <select required asp-for="Language" class="form-select" aria-label="Default select example">
                        <option value="" disabled selected hidden>Open this select menu</option>
                        <option value="C#">C#</option>
                        <option value="python">Python</option>
                        <option value="javascript">Javascript</option>
                    </select>
                    <span class="text-warning" asp-validation-for="Language"></span>
                </div>
            </div>
            <div class="mb-3 ">
                <label class="col-form-label" asp-for="Comment">Message (optional)</label>
                <textarea asp-for="Comment" cols class="form-control col-sm-6"
                    placeholder="Leave a comment here"></textarea>
                <span class="text-warning" asp-validation-for="Comment"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Birthday"></label>
                <input asp-for="Birthday" class="form-control">
                <span class="text-warning" asp-validation-for="Birthday"></span>
            </div>
            <div class="d-flex justify-content-end">
                <input value="submit" type="submit" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>
